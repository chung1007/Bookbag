<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#33bbff"
    tools:context="com.setactionbartitletextposition_android_examples.com.MainActivity">

    <TextView
        android:id="@+id/textDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bookbag"
        android:textSize="40sp"
        android:textColor="#ffffff"
        android:layout_centerInParent="true"
        android:paddingBottom="150dp"
        android:paddingTop="30dp"/>

    <ImageView
        android:id="@+id/iconImage"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/bookbagicon"
        android:tint="#ffffff"
        android:layout_centerInParent="true"
        android:layout_above="@+id/textDisplay"/>

    <fragment
        android:name="com.example.sam.bookbag.FacebookLogin"
        android:id="@+id/facebookLoginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textDisplay"
        android:layout_centerInParent="true"/>

</RelativeLayout>
