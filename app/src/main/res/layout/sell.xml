<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <TextView
        android:id="@+id/sellText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Add a listing"
        android:textColor="#3c98a1"
        android:paddingBottom="15dp"
        android:textSize="20sp"
        android:textStyle="bold"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/linearlayoutborder"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/textBookImageOne"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/addpicture"
            android:paddingTop="15dp"
            android:layout_gravity="center_vertical"
            android:paddingBottom="15dp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/textBookImageTwo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/addpicture"
            android:paddingTop="15dp"
            android:layout_gravity="center_vertical"
            android:paddingBottom="15dp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/textBookImageThree"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/addpicture"
            android:paddingTop="15dp"
            android:layout_gravity="center_vertical"
            android:paddingBottom="15dp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/textBookImageFour"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/addpicture"
            android:paddingTop="15dp"
            android:layout_gravity="center_vertical"
            android:paddingBottom="15dp"
            android:layout_weight="1"/>

    </LinearLayout>

    <ScrollView
        android:id="@+id/postDataScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:isScrollContainer="false">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/notesSection"
                android:layout_width="match_parent"
                android:layout_height="40dp">

            <EditText
                android:id="@+id/className"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Class Name : (ex. MAT 21)"
                android:textSize="15dp"
                android:paddingLeft="10dp"
                android:background="@android:color/transparent"
                android:layout_centerVertical="true"/>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#e9eeee">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="Book Info"
                    android:layout_alignParentBottom="true"
                    android:paddingBottom="3dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/authorNameLayout">

                <TextView
                    android:id="@+id/authorNameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Author :"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:paddingTop="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"/>

                <EditText
                    android:id="@+id/authorName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:hint="name"
                    android:textSize="15sp"
                    android:layout_toRightOf="@+id/authorNameTextView"
                    android:background="@android:color/transparent"
                    android:paddingTop="10dp"/>

            </RelativeLayout>

            <View
                android:id="@+id/divider2"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@id/authorNameLayout"
                android:background="#e1dee0"
                android:layout_marginLeft="10dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/ISBNLayout">

                <TextView
                    android:id="@+id/ISBNTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ISBN :"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:paddingTop="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"/>

                <EditText
                    android:id="@+id/ISBN"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:hint="ISBN"
                    android:textSize="15sp"
                    android:layout_toRightOf="@+id/ISBNTextView"
                    android:background="@android:color/transparent"
                    android:paddingTop="10dp"/>

            </RelativeLayout>

            <View
                android:id="@+id/divider3"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@id/ISBNLayout"
                android:background="#e1dee0"
                android:layout_marginLeft="10dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/editionLayout">

                <TextView
                    android:id="@+id/editionTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edition :"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:paddingTop="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"/>

                <EditText
                    android:id="@+id/edition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:hint="(ex. 7th)"
                    android:textSize="15sp"
                    android:layout_toRightOf="@+id/editionTextView"
                    android:background="@android:color/transparent"
                    android:paddingTop="10dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#e9eeee">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="Values/Extras"
                    android:layout_alignParentBottom="true"
                    android:paddingBottom="3dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/conditionLayout">

                <TextView
                    android:id="@+id/conditionTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Condition :"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:paddingTop="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"/>

                <AutoCompleteTextView
                    android:id="@+id/condition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:hint="click for list"
                    android:textSize="15sp"
                    android:layout_toRightOf="@+id/conditionTextView"
                    android:background="@android:color/transparent"
                    android:paddingTop="10dp"/>

            </RelativeLayout>

            <View
                android:id="@+id/divider6"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@id/conditionLayout"
                android:background="#e1dee0"
                android:layout_marginLeft="10dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:id="@+id/noteLayout">

                <TextView
                    android:id="@+id/noteTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notes :"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:paddingTop="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"/>

                <EditText
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/notes"
                    android:inputType="textCapSentences|textMultiLine"
                    android:maxLength="2000"
                    android:maxLines="4"
                    android:hint="...."
                    android:paddingLeft="10dp"
                    android:layout_toRightOf="@id/noteTextView"
                    android:paddingTop="10dp"
                    android:textSize="15sp"
                    android:background="@android:color/transparent"/>


            </RelativeLayout>

            <View
                android:id="@+id/divider4"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@id/conditionLayout"
                android:background="#e1dee0"
                android:layout_marginLeft="10dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/priceLayout">

                <TextView
                    android:id="@+id/priceTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price :"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:paddingTop="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"/>

                <EditText
                    android:id="@+id/price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:text="$"
                    android:hint=" your price"
                    android:textSize="15sp"
                    android:layout_toRightOf="@+id/priceTextView"
                    android:background="@android:color/transparent"
                    android:paddingTop="10dp"/>

            </RelativeLayout>

            <View
                android:id="@+id/divider5"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@id/priceLayout"
                android:background="#e1dee0"
                android:layout_marginLeft="10dp"
                android:paddingBottom="10dp"/>

            <Button
                android:id="@+id/postButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Post"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="0dp"
                android:backgroundTint="#2ECC71"
                android:textColor="#ffffff"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>