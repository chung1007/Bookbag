<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4">

    <ImageView
        android:id="@+id/addWantItem"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/addwantitem"
        android:paddingRight="10dp"
        android:layout_alignBottom="@+id/wishButtons"
        android:layout_alignParentEnd="true"
        android:layout_gravity="right" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingTop="1dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/wishButtons"
        android:paddingTop="5dp"
        android:paddingBottom="2dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp">

        <Button
            android:id="@+id/seeWishItems"
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:background="@drawable/wishlistbutton1"
            android:text="Wishes"
            android:textAllCaps="false"
            android:textColor="#ffffff"/>

        <Button
            android:id="@+id/button1"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@drawable/availablebutton"
            android:text="@string/button1"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:layout_toEndOf="@+id/seeWishItems" />

        <Button
            android:id="@+id/button2"
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:background="@drawable/wishlistbutton2"
            android:layout_toRightOf="@id/button1"
            android:text="@string/button2"
            android:textAllCaps="false"
            android:textColor="#ffffff"/>

    </RelativeLayout>





</RelativeLayout>


    <ListView
        android:paddingTop="2dp"
        android:id="@+id/userWishList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null">

    </ListView>


</LinearLayout>