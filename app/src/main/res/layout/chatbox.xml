<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">


    <com.facebook.login.widget.ProfilePictureView
        android:id="@+id/chatImage"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:paddingTop="2dp"
        android:paddingLeft="10dp"/>

    <TextView
        android:id="@+id/chatName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sam Chung"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="#000000"
        android:paddingTop="12dp"
        android:layout_toRightOf="@id/chatImage"
        android:paddingLeft="20dp"/>

    <TextView
        android:id="@+id/latestMessage"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/chatName"
        android:layout_toRightOf="@id/chatImage"
        android:paddingTop="7dp"
        android:paddingLeft="20dp"
        android:text="4:20pm? sure, lets meet up at the library..."
        android:ellipsize="end"
        android:singleLine="true" />
    <TextView
        android:id="@+id/sellerId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/latestMessage"
        android:layout_toRightOf="@id/chatImage"
        android:paddingLeft="20dp"
        android:text=""
        android:alpha="0"/>

    <TextView
        android:id="@+id/titleOfTextBook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/chatImage"
        android:paddingLeft="20dp"
        android:paddingTop="70dp"
        android:text="Calculus AB"
        android:textColor="#1ABC9C"/>


</RelativeLayout>