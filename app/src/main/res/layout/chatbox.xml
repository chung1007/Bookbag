<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <com.facebook.login.widget.ProfilePictureView
        android:id="@+id/chatImage"
        android:layout_width="55dp"
        android:layout_height="75dp"
        android:layout_alignParentLeft="true"
        android:paddingLeft="10dp"/>

    <TextView
        android:id="@+id/chatName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sam Chung"
        android:textColor="#000000"
        android:layout_toRightOf="@id/chatImage"
        android:paddingLeft="20dp"/>

    <TextView
        android:id="@+id/latestMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/chatName"
        android:layout_toRightOf="@id/chatImage"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:text="4:20pm? sure, lets meet up at the library..."/>

    <TextView
        android:id="@+id/titleOfTextBook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/chatImage"
        android:paddingLeft="20dp"
        android:layout_below="@+id/latestMessage"
        android:paddingTop="10dp"
        android:text="Calculus AB"
        android:textColor="#1ABC9C"/>




</RelativeLayout>