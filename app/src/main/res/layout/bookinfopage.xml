<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/addToWishList"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:src="@drawable/addtowishlist"
        android:layout_gravity="top|right"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <HorizontalScrollView
        android:layout_width="147dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="10dp"
        android:scrollbarSize="3dp"
        android:scrollbarStyle="insideOverlay">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/imageDisplayOne"
            android:layout_width="160dp"
            android:layout_height="180dp"
            android:paddingTop="15dp"
            android:layout_gravity="center_vertical"
            android:paddingBottom="15dp"
            android:paddingRight="15dp"
            android:layout_weight="1"
            android:scaleType="fitXY"/>

        <ImageView
            android:id="@+id/imageDisplayTwo"
            android:layout_width="160dp"
            android:layout_height="180dp"
            android:paddingTop="15dp"
            android:layout_gravity="center_vertical"
            android:paddingBottom="15dp"
            android:layout_weight="1"
            android:paddingRight="15dp"
            android:scaleType="fitXY"/>

        <ImageView
            android:id="@+id/imageDisplayThree"
            android:layout_width="160dp"
            android:layout_height="180dp"
            android:paddingTop="15dp"
            android:layout_gravity="center_vertical"
            android:paddingBottom="15dp"
            android:layout_weight="1"
            android:paddingRight="15dp"
            android:scaleType="fitXY"/>

        <ImageView
            android:id="@+id/imageDisplayFour"
            android:layout_width="160dp"
            android:layout_height="180dp"
            android:paddingTop="15dp"
            android:layout_gravity="center_vertical"
            android:paddingBottom="15dp"
            android:layout_weight="1"
            android:paddingRight="15dp"
            android:scaleType="fitXY"/>

    </LinearLayout>

    </HorizontalScrollView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/priceHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text="Price:  "
            android:textStyle="bold"
            android:paddingTop="30dp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/priceDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$"
            android:textSize="20sp"
            android:paddingTop="27dp"
            android:layout_toRightOf="@id/priceHeading"
            android:textColor="#1ABC9C"/>
    </RelativeLayout>



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp">

    <TextView
        android:id="@+id/nameHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Textbook Name: "
        android:textStyle="bold"
        android:textSize="15sp"
        android:paddingLeft="20dp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/nameDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nameOfBook"
        android:scrollHorizontally="false"
        android:maxLines="2"
        android:layout_toRightOf="@+id/nameHeading"
        android:textSize="15sp"
        android:textColor="#000000"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/editionHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edition: "
            android:textStyle="bold"
            android:paddingLeft="20dp"
            android:textSize="15sp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/editionDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edition of book"
            android:layout_toRightOf="@+id/editionHeading"
            android:textSize="15sp"
            android:textColor="#000000"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/authorHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Author: "
            android:textStyle="bold"
            android:paddingLeft="20dp"
            android:textSize="15sp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/authorDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name of Author"
            android:layout_toRightOf="@+id/authorHeading"
            android:textSize="15sp"
            android:textColor="#000000"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/ISBNHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ISBN: "
            android:textStyle="bold"
            android:paddingLeft="20dp"
            android:textSize="15sp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/ISBNDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ISBN"
            android:layout_toRightOf="@+id/ISBNHeading"
            android:textSize="15sp"
            android:textColor="#000000"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/conditionHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Condition: "
            android:textStyle="bold"
            android:paddingLeft="20dp"
            android:textSize="15sp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/conditionDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book Condition"
            android:layout_toRightOf="@+id/conditionHeading"
            android:textSize="15sp"
            android:textColor="#000000"/>

    </RelativeLayout>


    <TextView
        android:id="@+id/notesHeading"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notes: "
        android:textSize="15sp"
        android:textStyle="bold"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <TextView
            android:id="@+id/notesDisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
            android:text="some notes"
            android:textColor="#000000"/>
    </ScrollView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/sellerPicture"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/addpicture"/>


    </RelativeLayout>

        <TextView
            android:id="@+id/sellerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="20dp"
            android:text="Seller"/>

        <Button
            android:id="@+id/contactSellerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Seller"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#1ABC9C"
            android:textColor="#ffffff"/>

    </LinearLayout>

    </ScrollView>

</LinearLayout>