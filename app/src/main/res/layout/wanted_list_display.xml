<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/explorebox">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="10dp">
        <TextView
            android:id="@+id/bookNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Textbook: "
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/bookNameDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:textSize="15dp"
            android:text=""
            android:paddingRight="10dp"
            android:layout_toRightOf="@id/bookNameTextView"
            android:background="@android:color/transparent"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp">
        <TextView
            android:id="@+id/bookISBNTextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ISBN: "
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/bookISBNDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:textSize="15sp"
            android:text=""
            android:layout_toRightOf="@id/bookISBNTextview"
            android:background="@android:color/transparent"/>
    </RelativeLayout>

</LinearLayout>