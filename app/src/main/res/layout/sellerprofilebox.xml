<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@drawable/explorebox">

    <com.facebook.login.widget.ProfilePictureView
        android:id="@+id/sellerProfileImage"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/sellerProfileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SELLER'S NAME"
        android:layout_centerVertical="true"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_toRightOf="@id/sellerProfileImage"
        android:paddingLeft="20dp"/>

    <TextView
        android:id="@+id/sellerProfileId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="userId"
        android:layout_below="@+id/sellerProfileName"
        android:layout_toRightOf="@id/sellerProfileImage"
        android:paddingLeft="20dp"
        android:alpha="0"/>

</RelativeLayout>