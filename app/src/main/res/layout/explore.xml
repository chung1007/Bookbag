<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="3dp"
    android:paddingLeft="5dp">

    <EditText
        android:id="@+id/searchBar"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/exploresearchbar"
        android:hint="Search"
        android:paddingLeft="10dp"
        android:textSize="16sp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/searchBar"
        android:paddingLeft="3dp"
        android:paddingRight="5dp"
        android:gravity="center">

    <Spinner
        android:id="@+id/exploreSpinner"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:entries="@array/sort_arrays"
        android:prompt="@string/spinner_heading"
        android:textAlignment="inherit"
        android:spinnerMode="dropdown"
        android:paddingLeft="10dp"
        android:background="@drawable/exploresearchbar"/>

    </RelativeLayout>

</RelativeLayout>

    <ListView
        android:id="@+id/exploreBoxList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null">

    </ListView>


</LinearLayout>